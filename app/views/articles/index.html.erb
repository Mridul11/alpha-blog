<h2>All created articles</h2>
<p><%= link_to "Create new Article", new_article_path %></p>
<hr>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>
  <% @article.each do |arts| %>
    <tr>
      <td><%= arts.title %></td>
      <td><%= arts.description %></td>
      <td><%= link_to "Edit", edit_article_path(arts) %></td>
      <td><%= link_to "Show", article_path(arts) %></td>
      <td><%= link_to "Delete", article_path(arts), method: :delete, data: {confirm: "Are you sure?"} %></td>
    </tr>
  <% end %>
</table>
